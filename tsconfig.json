{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["esnext", "dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "target": "es2020"
  },
  "include": ["src", "test"]
}
